{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "../",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react-jsx",
    "baseUrl": "..",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@engine/*": [
        "src/core/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@logic/*": [
        "src/core/mechanics/*"
      ],
      "@ai/*": [
        "src/core/ai/*"
      ],
      "@setup/*": [
        "src/core/setup/*"
      ],
      "@mechanics/*": [
        "src/core/mechanics/*"
      ],
      "@primitives/*": [
        "src/core/primitives/*"
      ],
      "@blueprints/*": [
        "src/core/blueprints/*"
      ],
      "@seeds/*": [
        "src/core/setup/seeds/*"
      ],
      "@engineTypes/*": [
        "src/shared/types/*"
      ],
      "@bionics/*": [
        "src/shared/components/*"
      ],
      "@bionics": [
        "src/shared/components"
      ],
      "@atoms/*": [
        "src/shared/components/atoms/*"
      ],
      "@atoms": [
        "src/shared/components/atoms"
      ],
      "@molecules/*": [
        "src/shared/components/molecules/*"
      ],
      "@molecules": [
        "src/shared/components/molecules"
      ],
      "@organisms/*": [
        "src/shared/components/organisms/*"
      ],
      "@organisms": [
        "src/shared/components/organisms"
      ],
      "@templates/*": [
        "src/shared/components/templates/*"
      ],
      "@templates": [
        "src/shared/components/templates"
      ],
      "@hooks/*": [
        "src/shared/hooks/*"
      ],
      "@hooks": [
        "src/shared/hooks"
      ],
      "@context/*": [
        "src/shared/context/*"
      ],
      "@context": [
        "src/shared/context"
      ],
      "@utils/*": [
        "src/shared/utils/*"
      ],
      "@utils": [
        "src/shared/utils"
      ],
      "@types/*": [
        "src/shared/types/*"
      ],
      "@assets/*": [
        "src/shared/assets/*"
      ],
      "@game/*": [
        "src/client/game/*"
      ],
      "@gameHooks/*": [
        "src/client/game/shared/hooks/*"
      ],
      "@gameHooks": [
        "src/client/game/shared/hooks"
      ],
      "@gameUtils/*": [
        "src/client/game/shared/utils/*"
      ],
      "@gameUtils": [
        "src/client/game/shared/utils"
      ],
      "@constants": [
        "constants"
      ],
      "@constants/*": [
        "constants/*"
      ],
      "@client/*": [
        "src/client/*"
      ]
    }
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}